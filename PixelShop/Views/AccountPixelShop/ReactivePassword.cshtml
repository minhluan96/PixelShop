
@Styles.Render("~/Content/css-login")
@Scripts.Render("~/bundles/scripts-login")
<script src="@Url.Content("~/assets/global/plugins/jquery-validation/js/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/assets/global/plugins/jquery-migrate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/assets/global/plugins/forLogin.js")" type="text/javascript"></script>
<script src="@Url.Content("~/assets/admin/pages/scripts/login.js")" type="text/javascript"></script>
<!-- BEGIN LOGIN -->
<div class="login">
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        <form class="login-form" action="../AccountPixelShop/CompareToken" method="post">
            <h3 class="form-title">XÁC THỰC</h3>
            <p style="color:orangered; text-align:center; margin-bottom: 10px;">
                Vui lòng nhập mã xác thực đã gửi trong Email của bạn
            </p>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span>
                    Nhập mã xác thực
                </span>
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Mã xác thực</label>
                <input class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="Mã xác thực" name="token" />
            </div>
            
            <div class="form-actions">
                <button type="button" id="back-btn" class="btn btn-default">Quay lại</button>
                <button type="submit" class="btn btn-success uppercase">Đồng ý</button>
            </div>
           
        </form>
        <!-- END LOGIN FORM -->
        <!-- BEGIN FORGOT PASSWORD FORM -->
      
        <!-- END FORGOT PASSWORD FORM -->
       
    </div>


</div>