@using PixelShop.Models
@model PagedList.IPagedList<PixelShop.Models.SANPHAM>
<div class="sub-banner my-banner3">
</div>
<div class="content">
    <div class="container">
         @using (Html.BeginForm("Index", "TimKiem"))
         {
        <div class="col-md-4 w3ls_dresses_grid_left">
            <div class="w3ls_dresses_grid_left_grid search-agileinfo pull-right" style="width:80%;">
          
                    <input type="search" name="Ten" placeholder="Nhập tên sản phẩm">
                    <button type="submit" class="btn btn-default search" aria-label="Left Align">
                        <i class="fa fa-search" aria-hidden="true"> </i>
                    </button>
            </div>
            <div class="w3ls_dresses_grid_left_grid" style="margin-top:70px;">
                <h3>LOẠI</h3>
                <div class="w3ls_dresses_grid_left_grid_sub">
                    <div class="ecommerce_dres-type">
                        <ul>
                            @{ List<DANHMUC> lstDM = ViewData["danhmuc"] as List<DANHMUC>; }
                            @for (int i = 0; i < lstDM.Count(); i++)
                            {
                                <li>
                                    <div class="radio">
                                        <input type="radio" id="radio+@lstDM.ElementAt(i).MaDanhMuc" value="@lstDM.ElementAt(i).MaDanhMuc" name="DanhMuc" />
                                        <label for="radio+@lstDM.ElementAt(i).MaDanhMuc"><span></span>@lstDM.ElementAt(i).TenDanhMuc</label>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="w3ls_dresses_grid_left_grid">
                <h3>HÃNG SẢN XUẤT</h3>
                <div class="w3ls_dresses_grid_left_grid_sub">
                    <div class="ecommerce_color">
                        <ul>
                            @{ List<NHASANXUAT> lstNSX = ViewData["nhasanxuat"] as List<NHASANXUAT>; }
                            @for (int i = 0; i < lstNSX.Count(); i++)
                            {
                                <li>
                                    <div class="radio">
                                        <input type="radio" id="radio+@lstNSX.ElementAt(i).MaNSX" value="@lstNSX.ElementAt(i).MaNSX" name="NhaSanXuat" />
                                        <label for="radio+@lstNSX.ElementAt(i).MaNSX"><span></span>@lstNSX.ElementAt(i).TenNSX</label>
                                    </div>
                                </li>
                            }   
                        </ul>
                    </div>
                </div>
            </div>
            <div class="w3ls_dresses_grid_left_grid">
                <h3>MỨC GIÁ</h3>
                <div class="w3ls_dresses_grid_left_grid_sub">
                    <div class="ecommerce_color ecommerce_size">
                        <ul>
                            <li>
                                <div class="radio">
                                    <input type="radio" id="radioGia01" value="0-3000000" name="Gia" />
                                    <label for="radioGia01"><span></span>Dưới 3 triệu</label>
                                </div>
                            </li>
                            <li>
                                <div class="radio">
                                    <input type="radio" id="radioGia02" value="3000001-5000000" name="Gia" />
                                    <label for="radioGia02"><span></span>Từ 3 đến 5 triệu</label>
                                </div>
                            </li>
                            <li>
                                <div class="radio">
                                    <input type="radio" id="radioGia03" value="5000001-10000000" name="Gia" />
                                    <label for="radioGia03"><span></span>Từ 5 đến 10 triệu</label>
                                </div>
                            </li>
                            <li>
                                <div class="radio">
                                    <input type="radio" id="radioGia04" value="10000001-99999999" name="Gia" />
                                    <label for="radioGia04"><span></span>Trên 10 triệu</label>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="w3ls_dresses_grid_left_grid">
                <div class="dresses_img_hover">
                    <img src="~/images/offer2.jpg" alt=" " class="img-responsive" />
                    <div class="dresses_img_hover_pos">
                        <h4>Giảm giá<span>50%</span><i>trong hôm nay</i></h4>
                    </div>
                </div>
            </div>
        </div>
        }
        <div class="col-md-8 col-sm-8 women-dresses">
                    
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                           if (i % 3 == 0) { @Html.Raw("<div class=\"women-set1\">")            }

                        <a href="@Url.Action("Index", "Info", new { id = Model.ElementAt(i).MaSP })">
                            <div class="col-md-4 women-grids wp1 animated wow slideInUp" data-wow-delay=".5s">
                                <div class="product-img">
                                    <img src="@Html.DisplayFor(sp => Model.ElementAt(i).HinhHienThi)" alt="" />
                                    <div class="p-mask">
                                        <a href="@Url.Action("OrderNow", "ShoppingCart", new {id= Model.ElementAt(i).MaSP },null)"><button type="submit" class="w3ls-cart pw3ls-cart"><i class="fa fa-cart-plus" aria-hidden="true"></i> Thêm vào giỏ hàng</button></a>
                                    </div>
                                </div>
                                <i class="fa fa-star yellow-star" aria-hidden="true"></i>
                                <i class="fa fa-star yellow-star" aria-hidden="true"></i>
                                <i class="fa fa-star yellow-star" aria-hidden="true"></i>
                                <i class="fa fa-star yellow-star" aria-hidden="true"></i>
                                <i class="fa fa-star gray-star" aria-hidden="true"></i>
                                <h4>@Html.DisplayFor(sp => Model.ElementAt(i).TenSP)</h4>
                                <h5>@Html.DisplayFor(sp => Model.ElementAt(i).giaStr)</h5>
                            </div>
                            </a>
                            if (i % 3 == 2)
                            {
                            @Html.Raw("<div class=\"clearfix\"></div> </div>")
                            }
                            }
                            <div class="women-set1">
                                Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) trên @Model.PageCount
                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                            </div>
</div>
    </div>
</div>
