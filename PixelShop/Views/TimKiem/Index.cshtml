@model IEnumerable<PixelShop.Models.SANPHAM>

<div class="sub-banner my-banner3">
</div>
<div class="content">
    <div class="container">
        <div class="col-md-4 w3ls_dresses_grid_left">
            <div class="w3ls_dresses_grid_left_grid">
                <h3>LOẠI</h3>
                <div class="w3ls_dresses_grid_left_grid_sub">
                    <div class="ecommerce_dres-type">
                        <ul>
                            <li>
                                <div class="radio">
                                    <label><input type="radio" name="optLSP"><a href="men.html">Đồng hồ thông minh</a></label>
                                </div>
                            </li>
                            <li>
                                <div class="radio">
                                    <label><input type="radio" name="optLSP"><a href="men.html">Đồng hồ thể thao</a></label>
                                </div>
                            </li>
                            <li>
                                <div class="radio">
                                    <label><input type="radio" name="optLSP"><a href="men.html">Đồng hồ trẻ em</a></label>
                                </div>
                            </li>
                            <li>
                                <div class="radio">
                                    <label><input type="radio" name="optLSP"><a href="men.html">Đồng hồ cổ</a></label>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="w3ls_dresses_grid_left_grid">
                <h3>HÃNG SẢN XUẤT</h3>
                <div class="w3ls_dresses_grid_left_grid_sub">
                    <div class="ecommerce_color">
                        <ul>
                            <li>
                                <div class="radio">
                                    <label><input type="radio" name="optNSX"><a href="men.html">Apple</a></label>
                                </div>
                            </li>
                            <li>
                                <div class="radio">
                                    <label><input type="radio" name="optNSX"><a href="men.html">Samsung</a></label>
                                </div>
                            </li>
                            <li>
                                <div class="radio">
                                    <label><input type="radio" name="optNSX"><a href="men.html">Garmin</a></label>
                                </div>
                            </li>
                            <li>
                                <div class="radio">
                                    <label><input type="radio" name="optNSX"><a href="men.html">Pebble</a></label>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="w3ls_dresses_grid_left_grid">
                <h3>MỨC GIÁ</h3>
                <div class="w3ls_dresses_grid_left_grid_sub">
                    <div class="ecommerce_color ecommerce_size">
                        <ul>
                            <li>
                                <div class="radio">
                                    <label><input type="radio" name="optGia"><a href="men.html">Dưới 3 triệu</a></label>
                                </div>
                            </li>
                            <li>
                                <div class="radio">
                                    <label><input type="radio" name="optGia"><a href="men.html">Từ 3 đến 5 triệu</a></label>
                                </div>
                            </li>
                            <li>
                                <div class="radio">
                                    <label><input type="radio" name="optGia"><a href="men.html">Từ 5 đến 10 triệu</a></label>
                                </div>
                            </li>
                            <li>
                                <div class="radio">
                                    <label><input type="radio" name="optGia"><a href="men.html">Trên 10 triệu</a></label>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="w3ls_dresses_grid_left_grid">
                <div class="dresses_img_hover">
                    <img src="~/images/offer2.jpg" alt=" " class="img-responsive" />
                    <div class="dresses_img_hover_pos">
                        <h4>Giảm giá<span>50%</span><i>trong hôm nay</i></h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8 col-sm-8 women-dresses">
            @{ int soDu = (Model.Count() % 3);}

            @for (int k = 0; k < Model.Count() - 3; k += 3)
            {
                int count = 2;
            <div class="women-set1">
                @for (int i = k; count >= 0 ; i++)
                {
                    count--;

                    <div class="col-md-4 women-grids wp1 animated wow slideInUp" data-wow-delay=".5s">
                        <a href="single.html">
                            <div class="product-img">
                                <img src="@Html.DisplayFor(model => model.ElementAt(i).HinhHienThi)" alt="" />
                                <div class="p-mask">
                                    <form action="#" method="post">
                                        <input type="hidden" name="cmd" value="_cart" />
                                        <input type="hidden" name="add" value="1" />
                                        <input type="hidden" name="w3ls1_item" value="Casual shirt" />
                                        <input type="hidden" name="amount" value="50.00" />
                                        <button type="submit" class="w3ls-cart pw3ls-cart"><i class="fa fa-cart-plus" aria-hidden="true"></i> Thêm vào giỏ hàng</button>
                                    </form>
                                </div>
                            </div>
                        </a>
                        <i class="fa fa-star yellow-star" aria-hidden="true"></i>
                        <i class="fa fa-star yellow-star" aria-hidden="true"></i>
                        <i class="fa fa-star yellow-star" aria-hidden="true"></i>
                        <i class="fa fa-star yellow-star" aria-hidden="true"></i>
                        <i class="fa fa-star gray-star" aria-hidden="true"></i>
                        <h4>@Html.DisplayFor(model => model.ElementAt(i).TenSP)</h4>
                        <h5>@Html.DisplayFor(model => model.ElementAt(i).giaStr)</h5>
                    </div>


                }
                <div class="clearfix"></div>
                </div>
            }
            @if (soDu > 0)
            {
                <div class="women-set1">
                    @for(int i = Model.Count() - soDu; i < Model.Count(); i++)
                    {
                    <div class="col-md-4 women-grids wp1 animated wow slideInUp" data-wow-delay=".5s">
                        <a href="single.html">
                            <div class="product-img">
                                <img src="@Html.DisplayFor(model => model.ElementAt(i).HinhHienThi)" alt="" />
                                <div class="p-mask">
                                    <form action="#" method="post">
                                        <input type="hidden" name="cmd" value="_cart" />
                                        <input type="hidden" name="add" value="1" />
                                        <input type="hidden" name="w3ls1_item" value="Casual shirt" />
                                        <input type="hidden" name="amount" value="50.00" />
                                        <button type="submit" class="w3ls-cart pw3ls-cart"><i class="fa fa-cart-plus" aria-hidden="true"></i> Thêm vào giỏ hàng</button>
                                    </form>
                                </div>
                            </div>
                        </a>
                        <i class="fa fa-star yellow-star" aria-hidden="true"></i>
                        <i class="fa fa-star yellow-star" aria-hidden="true"></i>
                        <i class="fa fa-star yellow-star" aria-hidden="true"></i>
                        <i class="fa fa-star yellow-star" aria-hidden="true"></i>
                        <i class="fa fa-star gray-star" aria-hidden="true"></i>
                        <h4>@Html.DisplayFor(model => model.ElementAt(i).TenSP)</h4>
                        <h5>@Html.DisplayFor(model => model.ElementAt(i).giaStr)</h5>
                    </div>
                    }
                    <div class="clearfix"></div>
                    </div>
             }



                </div>


        </div>
    </div>
</div>

