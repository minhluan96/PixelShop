<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pixel Shop</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Fashion Club Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
            Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400" rel="stylesheet">
      @Styles.Render("~/Content/css")
    <script src="@Url.Content("~/assets/global/plugins/jquery.min.js")" type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>
<body>
    <p>Write something in the input field, and then press enter or click outside the field.</p>
    <div class="header-top-w3layouts">
            <div class="row">

                <div class="col-md-6 phone-w3l pull-left">
                    <div class="phone-shop">+0901328995</div>
                </div>
                <div class="col-md-6 phone-w3l pull-right">
                    <div class="user-login">Đăng nhập</div>
                    <div class="user-cart">
                        <div class="cart">
                            <form action="#" method="post" class="last">
                                <input type="hidden" name="cmd" value="_cart" />
                                <input type="hidden" name="display" value="1" />
                                <button class="w3view-cart" type="submit" name="submit" value=""><i class="fa fa-cart-arrow-down" aria-hidden="true"></i>  Giỏ hàng</button>
                            </form>
                        </div>
                    </div>
                    <div class="user-numproduct">0</div>
                </div>
            </div>
    
            <div class="clearfix"></div>
    </div>
    <div class="header-bottom-w3ls">
        @{Html.RenderAction("Menu", "MenuComponent");}
    </div>
    @RenderBody()
    <div class="row">
        @{Html.RenderAction("Footer", "FooterComponent");}
    </div>


    @Scripts.Render("~/bundles/scripts")
    @RenderSection("scripts", required: false)
</body>
</html>
