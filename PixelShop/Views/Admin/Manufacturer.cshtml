@using PixelShop.Models
@model PagedList.IPagedList<PixelShop.Models.NHASANXUAT>

@Styles.Render("~/Content/cssForAdmin")
@Scripts.Render("~/bundles/scriptsForAdmin")
<script src="@Url.Content("~/assets/global/plugins/jquery-ui/jquery-ui.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/assets/global/plugins/jquery-migrate.min.js")" type="text/javascript"></script>
<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
    <div class="page-content">
        <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <div class="modal fade" id="portlet-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                        <h4 class="modal-title">Modal title</h4>
                    </div>
                    <div class="modal-body">
                        Widget settings form goes here
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn blue">Save changes</button>
                        <button type="button" class="btn default" data-dismiss="modal">Close</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->
        <!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE HEAD -->
        <div class="page-head">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>Nhà sản xuất <small></small></h1>
            </div>
            <!-- END PAGE TITLE -->
        </div>
        <!-- END PAGE HEAD -->
        <!-- BEGIN PAGE BREADCRUMB -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="index.html">Nhà sản xuất</a>
                <i class="fa fa-circle"></i>
            </li>
        </ul>
        <!-- END PAGE BREADCRUMB -->
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row">
            <div class="col-md-12">
                <!-- Begin: life time stats -->
                <div class="portlet light">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-gift font-green-sharp"></i>
                            <span class="caption-subject font-green-sharp bold uppercase">Nhà sản xuất</span>
                            <span class="caption-helper"></span>
                        </div>
                        <div class="actions">
                            <a href="javascript:;" class="btn btn-sm btn-circle btn-success" data-toggle="dropdown">
                                <i class="fa fa-plus"></i>
                                Tạo mới
                            </a>
                            @*Add New Frame *@
                            <div class="dropdown-menu theme-panel div-iframeAdmin dropdown-custom">
                            </div>
                            <div class="dropdown-menu theme-panel div-iframeAdmin1 dropdown-custom hold-on-click">
                                <div class="row hold-on-click dropdown-menu div-iframeAdmin-content">
                                    <div class="col-md-12">
                                        <div class="form-horizontal form-row-seperated">
                                            @using (Html.BeginForm("ManufacturerCreate", "Admin", FormMethod.Post))
                                            {
                                                <div class="portlet light">
                                                    <div class="portlet-title">
                                                        <div class="caption">
                                                            <i class="icon-basket font-green-sharp"></i>
                                                            <span class="caption-subject font-green-sharp bold uppercase">
                                                                Tạo mới nhà sản xuất
                                                            </span>
                                                        </div>
                                                        <div class="actions btn-set">
                                                            <button type="submit" class="btn green-haze btn-circle"><i class="fa fa-check"></i> Tạo mới</button>
                                                        </div>
                                                    </div>
                                                    <div class="portlet-body">
                                                        <div class="tabbable">
                                                            <div class="tab-content no-space">
                                                                <div class="tab-pane active" id="tab_general">
                                                                    <div class="form-body">
                                                                        <div class="form-group">
                                                                            <label class="col-md-4 control-label">
                                                                                Tên nhà sản xuất: <span class="required">
                                                                                    *
                                                                                </span>
                                                                            </label>
                                                                            <div class="col-md-8">
                                                                                <input type="text" class="form-control" name="tennsx" placeholder="">
                                                                            </div>
                                                                        </div>
                                                                        <div class="form-group">
                                                                            <label class="col-md-4 control-label">
                                                                                Mô tả: <span class="required">
                                                                                    *
                                                                                </span>
                                                                            </label>
                                                                            <div class="col-md-8">
                                                                                <textarea class="form-control" name="mota"></textarea>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                            </div>
                                        </div>
                                </div>
                                <!-- END PAGE CONTENT-->
                            </div>

                            
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-container">
                            <div class="table-actions-wrapper">
                                <span>
                                </span>
                                <select class="table-group-action-input form-control input-inline input-small input-sm">
                                    <option value="">Select...</option>
                                    <option value="publish">Publish</option>
                                    <option value="unpublished">Un-publish</option>
                                    <option value="delete">Delete</option>
                                </select>
                                <button class="btn btn-sm yellow table-group-action-submit"><i class="fa fa-check"></i> Submit</button>
                            </div>
                            <table class="table table-striped table-bordered table-hover" id="datatable_products">
                                <thead>
                                    <tr role="row" class="heading">
                                        <th width="1%">
                                            STT
                                        </th>
                                        <th width="10%">
                                            Mã nhà sản xuất
                                        </th>
                                        <th width="15%">
                                            Tên nhà sản xuất
                                        </th>
                                       
                                        <th width="10%">
                                            Trạng thái
                                        </th>
                                        <th width="15%">
                                            Hoạt động
                                        </th>
                                    </tr>
                                    <tr role="row" class="filter">
                                        @using (Html.BeginForm("TimKiemNSX", "Admin", FormMethod.Post))
                                        {
                                            <td>
                                                <input type="text" class="form-control form-filter input-sm" name="stt" readonly>
                                            </td>
                                            
                                            <td>
                                                <input type="text" class="form-control form-filter input-sm" name="mansx" placeholder="Mã NSX">
                                            </td>
                                            <td>
                                                <input type="text" class="form-control form-filter input-sm" name="tennsx" placeholder="Tên NSX">
                                            </td>
                                           
                                            
                                            
                                            <td>
                                                <select name="trangthai" class="form-control form-filter input-sm">
                                                    <option value="2">Tất cả</option>
                                                    <option value="0">Hoạt động</option>
                                                    <option value="1">Tạm ngưng</option>
                                                   
                                                </select>
                                            </td>
                                            <td>
                                                <div class="margin-bottom-5" style="display:inline-block;">
                                                    <button class="btn btn-sm yellow filter-submit margin-bottom" type="submit"><i class="fa fa-search"></i> Tìm kiếm</button>
                                                </div>
                                                <button class="btn btn-sm red filter-cancel" type="reset"><i class="fa fa-times"></i> </button>
                                            </td>
                                        }
                                    </tr>

                                </thead>
                                <tbody>

                                    @for (int i = 0; i < Model.Count(); i++)
                                    {
                                    <tr role="row">
                                        <td style="text-align:center">
                                            <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline" >
                                                @{ int pos = Model.ElementAt(i).MaNSX.IndexOf("NSX"); }
                                                @Model.ElementAt(i).MaNSX.Substring(pos + 3)
                                            </label>
                                        </td>
                                        <td class="sorting_1">
                                            @Model.ElementAt(i).MaNSX
                                        </td>
                                        <td>
                                            @Model.ElementAt(i).TenNSX
                                        </td>
                                       
                                        <td>
                                            @if (Model.ElementAt(i).BiXoa == 0)
                                            {
                                                <span class="label label-sm label-warning">Hoạt động</span>
                                            }
                                            else
                                            {
                                                <span class="label label-sm label-warning">Không hoạt động</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="javascript:;" class="btn btn-sm btn-circle btn-default" data-toggle="dropdown">
                                                <i class="fa fa-pencil"></i>
                                                Cập nhật
                                            </a>
                                            <div class="dropdown-menu theme-panel div-iframeAdmin dropdown-custom">
                                            </div>
                                            @*Add New Frame *@
                                            <div class="dropdown-menu theme-panel div-iframeAdmin1 dropdown-custom hold-on-click">
                                                <div class="row hold-on-click dropdown-menu div-iframeAdmin-content">
                                                    <div class="col-md-12">
                                                        <div class="form-horizontal form-row-seperated">
                                                            @using(Html.BeginForm("ManufacturerUpdate", "Admin", FormMethod.Post)){
                                                            <div class="portlet light">
                                                                <div class="portlet-title">
                                                                    <div class="caption">
                                                                        <i class="icon-basket font-green-sharp"></i>
                                                                        <span class="caption-subject font-green-sharp bold uppercase">
                                                                            Cập nhật nhà sản xuất
                                                                        </span>
                                                                        <span class="caption-helper"> </span>
                                                                    </div>
                                                                    <div class="actions btn-set">
                                                                        <button type="submit" class="btn green-haze btn-circle btn-capnhat"><i class="fa fa-check"></i>Cập nhật</button>
                                                                    </div>
                                                                </div>
                                                                <div class="portlet-body">
                                                                    <div class="tabbable">
                                                                        <div class="tab-content no-space">
                                                                            <div class="tab-pane active" id="tab_general">
                                                                                <div class="form-body">
                                                                                    <div class="form-group">
                                                                                        <label class="col-md-4 control-label">
                                                                                            Tên nhà sản xuất: <span class="required">
                                                                                                *
                                                                                            </span>
                                                                                        </label>
                                                                                        <div class="col-md-8">
                                                                                            <input type="text" class="form-control txt-tensx" name="tennsx" placeholder="" value="@Model.ElementAt(i).TenNSX">
                                                                                            <input type="text" class="form-control txt-mansx" name="mansx" placeholder="" value="@Model.ElementAt(i).MaNSX" style="display:none">
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- END PAGE CONTENT-->
                                            </div>
                                            <div style="display:inline-block">
                                                @using (Html.BeginForm("ManufacturerDelete", "Admin", FormMethod.Post))
                                                {
                                                    <input type="text" class="txt-mansx" name="mansx" placeholder="" value="@Model.ElementAt(i).MaNSX" style="display:none">
                                                    <button type="submit" href="javascript:;" class="btn btn-sm btn-circle btn-danger">
                                                        <i class="fa fa-trash-o"></i>
                                                        Xóa
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                    }

                                    <tr>
                                        <td colspan="6">
                                            <div class="col-lg-12" style="text-align:center">
                                                @*Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) trên @Model.PageCount*@
                                                @Html.PagedListPager(Model, page => Url.Action("Manufacturer", new { page }))
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            
                        </div>
                    </div>
                </div>
                <!-- End: life time stats -->
            </div>
        </div>
        <!-- END PAGE CONTENT-->
    </div>
</div>
<!-- END CONTENT -->

