@using PixelShop.Models
@model PagedList.IPagedList<PixelShop.Models.DONHANG>
@Styles.Render("~/Content/cssForAdmin")
@Scripts.Render("~/bundles/scriptsForAdmin")
<script src="@Url.Content("~/assets/global/plugins/jquery-ui/jquery-ui.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/assets/global/plugins/jquery-migrate.min.js")" type="text/javascript"></script>
<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
    <div class="page-content">
        <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <div class="modal fade" id="portlet-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                        <h4 class="modal-title">Modal title</h4>
                    </div>
                    <div class="modal-body">
                        Widget settings form goes here
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn blue">Save changes</button>
                        <button type="button" class="btn default" data-dismiss="modal">Close</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->
        <!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE HEAD -->
        <div class="page-head">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>Đơn hàng <small>danh sách đơn hàng</small></h1>
            </div>
            <!-- END PAGE TITLE -->
        </div>
        <!-- END PAGE HEAD -->
        <!-- BEGIN PAGE BREADCRUMB -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="index.html">Đơn hàng</a>
                <i class="fa fa-circle"></i>
            </li>
        </ul>
        <!-- END PAGE BREADCRUMB -->
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row">
            <div class="col-md-12">
                <!-- Begin: life time stats -->
                <div class="portlet light">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="icon-basket font-green-sharp"></i>
                            <span class="caption-subject font-green-sharp bold uppercase">Danh sách đơn hàng</span>
                            <span class="caption-helper">quản lý đơn hàng...</span>
                        </div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn btn-default btn-circle" href="javascript:;" data-toggle="dropdown">
                                    <i class="fa fa-share"></i>
                                    <span class="hidden-480">
                                        Tools
                                    </span>
                                    <i class="fa fa-angle-down"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li>
                                        <a href="javascript:;">
                                            Export to Excel
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:;">
                                            Export to CSV
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:;">
                                            Export to XML
                                        </a>
                                    </li>
                                    <li class="divider">
                                    </li>
                                    <li>
                                        <a href="javascript:;">
                                            Print Invoices
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-container">
                            <div class="table-actions-wrapper">
                                <span>
                                </span>
                                <select class="table-group-action-input form-control input-inline input-small input-sm">
                                    <option value="">Select...</option>
                                    <option value="Cancel">Cancel</option>
                                    <option value="Cancel">Hold</option>
                                    <option value="Cancel">On Hold</option>
                                    <option value="Close">Close</option>
                                </select>
                                <button class="btn btn-sm yellow table-group-action-submit"><i class="fa fa-check"></i> Submit</button>
                            </div>
                            <table class="table table-striped table-bordered table-hover" id="datatable_orders">
                                <thead>
                                    <tr role="row" class="heading">
                                        <th width="4%">
                                            Hóa đơn&nbsp;#
                                        </th>
                                        <th width="12%">
                                            Thời gian&nbsp;
                                        </th>
                                        <th width="15%">
                                            Khách hàng
                                        </th>
                                        <th width="10%">
                                            Nơi giao&nbsp;
                                        </th>
                                        <th width="10%">
                                            Tên người nhận&nbsp;
                                        </th>
                                        <th width="10%">
                                            Ngày giao&nbsp;
                                        </th>
                                        <th width="10%">
                                            Số điện thoại&nbsp;
                                        </th>
                                        <th width="10%">
                                            Trạng thái
                                        </th>
                                        <th width="10%">
                                            Hoạt động
                                        </th>
                                    </tr>
                                    <tr role="row" class="filter">
                                       @using (Html.BeginForm("TimKiemDH", "Admin", FormMethod.Post)) {
                                        <td>
                                            <input type="text" class="form-control form-filter input-sm" name="madh">
                                        </td>
                                        <td>
                                            <div class="input-group date date-picker margin-bottom-5" data-date-format="dd/mm/yyyy">
                                                <input type="text" class="form-control form-filter input-sm" readonly name="order_date_from" placeholder="Từ">
                                                <span class="input-group-btn">
                                                    <button class="btn btn-sm default" type="button"><i class="fa fa-calendar"></i></button>
                                                </span>
                                            </div>
                                            <div class="input-group date date-picker" data-date-format="dd/mm/yyyy">
                                                <input type="text" class="form-control form-filter input-sm" readonly name="order_date_to" placeholder="Đến">
                                                <span class="input-group-btn">
                                                    <button class="btn btn-sm default" type="button"><i class="fa fa-calendar"></i></button>
                                                </span>
                                            </div>
                                        </td>
                                        <td>
                                            <input type="text" class="form-control form-filter input-sm" name="tenkh" placeholder="Email khách hàng">
                                        </td>
                                        <td>
                                            <input type="text" class="form-control form-filter input-sm" name="diachigiao" placeholder="Nơi giao">
                                        </td>
                                        <td>
                                            <input type="text" class="form-control form-filter input-sm" name="tennguoinhan" placeholder="Tên người nhận">
                                        </td>
                                        <td>
                                            <div class="margin-bottom-5">
                                                <input type="text" class="form-control form-filter input-sm" name="ngaydat" placeholder="Ngày đặt" />
                                            </div>
                                           
                                        </td>
                                        <td>
                                            <div class="margin-bottom-5">
                                                <input type="text" class="form-control form-filter input-sm margin-bottom-5 clearfix" name="sdt" placeholder="Số điện thoại" />
                                            </div>
                                            
                                        </td>
                                        <td>
                                            <select name="trangthai" class="form-control form-filter input-sm">
                                                <option value="99">Tất cả</option>
                                                @foreach (TINHTRANGDONHANG tt in ViewData["lstTT"] as List<TINHTRANGDONHANG>) {
                                                    <option value="@tt.MaTinhTrang">@tt.TenTinhTrang</option>
                                                }

                                            </select>
                                        </td>
                                        <td>
                                            <div class="margin-bottom-5">
                                                <button class="btn btn-sm yellow filter-submit margin-bottom" type="submit"><i class="fa fa-search"></i> Tìm kiếm</button>
                                            </div>
                                            <button class="btn btn-sm red filter-cancel" type="reset"><i class="fa fa-times"></i> </button>
                                        </td>
                                       }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (DONHANG dh in Model)
                                    {
                                    <tr role="row">
                                        <td class="sorting_1">
                                            @dh.MaDH
                                        </td>
                                        <td>
                                            @dh.NgayDate
                                        </td>
                                        <td>
                                            @dh.EmailDat
                                        </td>
                                        <td>
                                            @dh.DiaChiGiao
                                        </td>
                                        <td>
                                            @dh.TenNguoiNhan
                                        </td>
                                        <td>
                                            @dh.NgayGiao
                                        </td>
                                        <td>
                                            @dh.SDTNhan
                                        </td>
                                        <td>
                                            <span class="label label-sm label-primary">@dh.TINHTRANGDONHANG.TenTinhTrang</span>
                                        </td>
                                        <td>
                                            @using (Html.BeginForm("ViewOrder", "Admin", FormMethod.Post))
                                            {
                                                <input type="text" class="txt-mansx" name="madh" placeholder="" value="@dh.MaDH" style="display:none">
                                                <button type="submit" href="javascript:;" class="btn btn-sm btn-circle btn-default">
                                                    <i class="fa fa-search"></i>
                                                    Chi tiết
                                                </button>
                                            }
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- End: life time stats -->
            </div>
        </div>
        <!-- END PAGE CONTENT-->
    </div>
</div>
<!-- END CONTENT -->
