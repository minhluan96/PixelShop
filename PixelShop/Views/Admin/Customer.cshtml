@using PixelShop.Models
@model PagedList.IPagedList<PixelShop.Models.TAIKHOAN>
@Styles.Render("~/Content/cssForAdmin")
@Scripts.Render("~/bundles/scriptsForAdmin")
<script src="@Url.Content("~/assets/global/plugins/jquery-ui/jquery-ui.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/assets/global/plugins/jquery-migrate.min.js")" type="text/javascript"></script>
<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
    <div class="page-content">
        <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <div class="modal fade" id="portlet-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                        <h4 class="modal-title">Modal title</h4>
                    </div>
                    <div class="modal-body">
                        Widget settings form goes here
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn blue">Save changes</button>
                        <button type="button" class="btn default" data-dismiss="modal">Close</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->
        <!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE HEAD -->
        <div class="page-head">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>Tài khoản <small>danh sách tài khoản</small></h1>
            </div>
            <!-- END PAGE TITLE -->
        </div>
        <!-- END PAGE HEAD -->
        <!-- BEGIN PAGE BREADCRUMB -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="index.html">Tài khoản</a>
                <i class="fa fa-circle"></i>
            </li>
        </ul>
        <!-- END PAGE BREADCRUMB -->
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row">
            <div class="col-md-12">
                <!-- Begin: life time stats -->
                <div class="portlet light">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-gift font-green-sharp"></i>
                            <span class="caption-subject font-green-sharp bold uppercase">Tài khoản</span>
                            <span class="caption-helper">quản lý tài khoản...</span>
                        </div>
                        <div class="actions">

                          
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-container">
                            <div class="table-actions-wrapper">
                                <span>
                                </span>
                                <select class="table-group-action-input form-control input-inline input-small input-sm">
                                    <option value="">Select...</option>
                                    <option value="publish">Publish</option>
                                    <option value="unpublished">Un-publish</option>
                                    <option value="delete">Delete</option>
                                </select>
                                <button class="btn btn-sm yellow table-group-action-submit"><i class="fa fa-check"></i> Submit</button>
                            </div>
                            <table class="table table-striped table-bordered table-hover" id="datatable_products">
                                <thead>
                                    <tr role="row" class="heading">
                                        <th width="20%">
                                            Tài khoản
                                        </th>
                                        <th width="15%">
                                            Họ tên
                                        </th>
                                        <th width="15%">
                                            Quyền hạn
                                        </th>
                                        <th width="15%">
                                            Trạng thái
                                        </th>
                                        <th width="30%">
                                            Hoạt động
                                        </th>
                                    </tr>
                                    <tr role="row" class="filter">
                                        @using (Html.BeginForm("TimKiemKH", "Admin", FormMethod.Post))
                                        {
                                            <td width="20%">
                                                <input type="text" class="form-control form-filter input-sm" name="email" placeholder="Email">
                                            </td>
                                            <td width="15%">
                                                <input type="text" class="form-control form-filter input-sm" name="hoten" placeholder="Họ tên">
                                            </td>
                                            <td width="15%">
                                                <select name="quyenhan" class="form-control form-filter input-sm">
                                                    <option value="2">Tất cả</option>
                                                    <option value="0">Khách hàng</option>
                                                    <option value="1">Admin</option>

                                                </select>
                                            </td>
                                            <td width="15%">
                                                <select name="trangthai" class="form-control form-filter input-sm">
                                                    <option value="2">Tất cả</option>
                                                    <option value="0">Hoạt động</option>
                                                    <option value="1">Tạm ngưng</option>

                                                </select>
                                            </td>
                                            <td width="30%">
                                                <div class="margin-bottom-5" style="display:inline-block;">
                                                    <button class="btn btn-sm yellow filter-submit margin-bottom" type="submit"><i class="fa fa-search"></i> Tìm kiếm</button>
                                                </div>
                                                <button class="btn btn-sm red filter-cancel" type="reset"><i class="fa fa-times"></i> </button>
                                            </td>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (TAIKHOAN tk in Model)
                                    {
                                        <tr role="row">
                                            <td class="sorting_1">
                                                @tk.Email
                                            </td>
                                            <td>
                                                @tk.HoTen
                                            </td>
                                            <td>
                                                @if (tk.QuyenHan == 1)
                                                {
                                                    <span class="label label-sm label-primary">Admin</span>
                                                }
                                                else
                                                {
                                                    <span class="label label-sm label-primary">Khách hàng</span>
                                                }
                                            </td>
                                            <td>
                                                @if (tk.BiXoa == 1)
                                                {
                                                    <span class="label label-sm label-primary">Ngưng hoạt động</span>
                                                }
                                                else
                                                {
                                                    <span class="label label-sm label-primary">Hoạt động</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="javascript:;" class="btn btn-sm btn-circle btn-default" data-toggle="dropdown">
                                                    <i class="fa fa-pencil"></i>
                                                    Cập nhật
                                                </a>
                                                <div class="dropdown-menu theme-panel div-iframeAdmin dropdown-custom">
                                                </div>
                                                @*Add New Frame *@
                                                <div class="dropdown-menu theme-panel div-iframeAdmin1 dropdown-custom hold-on-click">
                                                    <div class="row hold-on-click dropdown-menu div-iframeAdmin-content">
                                                        <div class="col-md-12">
                                                            <div class="form-horizontal form-row-seperated" action="#">
                                                                @using (Html.BeginForm("CustomerUpdate", "Admin", FormMethod.Post))
                                                                {
                                                                    <div class="portlet light">
                                                                        <div class="portlet-title">
                                                                            <div class="caption">
                                                                                <i class="icon-puzzle font-green-sharp"></i>
                                                                                <span class="caption-subject font-green-sharp bold uppercase">
                                                                                    Cập nhật tài khoản
                                                                                </span>
                                                                            </div>
                                                                            <div class="actions btn-set">
                                                                                <button type="submit" class="btn green-haze btn-circle"><i class="fa fa-check"></i> Cập nhật</button>
                                                                            </div>
                                                                        </div>
                                                                        <div class="portlet-body">
                                                                            <div class="tabbable">
                                                                                <div class="tab-content no-space">
                                                                                    <div class="tab-pane active" id="tab_general">
                                                                                        <div class="form-body">
                                                                                            <div class="form-group">
                                                                                                <label class="col-md-4 control-label">
                                                                                                    Họ tên: <span class="required">
                                                                                                        *
                                                                                                    </span>
                                                                                                </label>
                                                                                                <div class="col-md-8">
                                                                                                    <input type="text" class="form-control txt-tensx" name="hoten" placeholder="" value="@tk.HoTen">
                                                                                                    <input type="text" class="form-control txt-mansx" name="email" placeholder="" value="@tk.Email" style="display:none">
                                                                                                </div>
                                                                                            </div>
                                                                                            <div class="form-group">
                                                                                                <label class="col-md-4 control-label">
                                                                                                    Quyền hạn: <span class="required">
                                                                                                        *
                                                                                                    </span>
                                                                                                </label>
                                                                                                <div class="col-md-8">
                                                                                                    <select name="quyenhan" class="table-group-action-input form-control input-inline input-small input-sm">
                                                                                                        <option value="0" @(tk.QuyenHan == 0 ? "selected" : "")>Khách hàng</option>
                                                                                                        <option value="1" @(tk.QuyenHan == 1 ? "selected" : "")>Admin</option>

                                                                                                    </select>
                                                                                                </div>
                                                                                            </div>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- END PAGE CONTENT-->
                                                </div>
                                                <div style="display:inline-block">
                                                    @if (tk.BiXoa == 0)
                                                    {
                                                        using (Html.BeginForm("CustomerDelete", "Admin", FormMethod.Post))
                                                        {
                                                            <input type="text" class="txt-mansx" name="taikhoan" placeholder="" value="@tk.Email" style="display:none">
                                                            <button type="submit" href="javascript:;" class="btn btn-sm btn-circle btn-danger">
                                                                <i class="fa fa-trash-o"></i>
                                                                Khóa
                                                            </button>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        using (Html.BeginForm("CustomerUnDelete", "Admin", FormMethod.Post))
                                                        {
                                                            <input type="text" class="txt-mansx" name="taikhoan" placeholder="" value="@tk.Email" style="display:none">
                                                            <button type="submit" href="javascript:;" class="btn btn-sm btn-circle btn-primary">
                                                                <i class="fa fa-trash-o"></i>
                                                                Mở khóa
                                                            </button>
                                                        }
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                    <tr>
                                        <td colspan="6">
                                            <div class="col-lg-12" style="text-align:center">
                                                @*Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) trên @Model.PageCount*@
                                                @Html.PagedListPager(Model, page => Url.Action("Customer", new { page }))
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- End: life time stats -->
            </div>
        </div>
        <!-- END PAGE CONTENT-->
    </div>
</div>
<!-- END CONTENT -->
