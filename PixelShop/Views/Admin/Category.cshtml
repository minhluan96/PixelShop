@using PixelShop.Models
@model PagedList.IPagedList<PixelShop.Models.DANHMUC>

@Styles.Render("~/Content/cssForAdmin")
@Scripts.Render("~/bundles/scriptsForAdmin")
<script src="@Url.Content("~/assets/global/plugins/jquery-ui/jquery-ui.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/assets/global/plugins/jquery-migrate.min.js")" type="text/javascript"></script>
<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
    <div class="page-content">
        <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <div class="modal fade" id="portlet-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                        <h4 class="modal-title">Modal title</h4>
                    </div>
                    <div class="modal-body">
                        Widget settings form goes here
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn blue">Save changes</button>
                        <button type="button" class="btn default" data-dismiss="modal">Close</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->
        <!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE HEAD -->
        <div class="page-head">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>Danh mục <small>danh sách danh mục</small></h1>
            </div>
            <!-- END PAGE TITLE -->
        </div>
        <!-- END PAGE HEAD -->
        <!-- BEGIN PAGE BREADCRUMB -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="index.html">Danh mục</a>
                <i class="fa fa-circle"></i>
            </li>  
        </ul>
        <!-- END PAGE BREADCRUMB -->
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row">
            <div class="col-md-12">
                <!-- Begin: life time stats -->
                <div class="portlet light">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-gift font-green-sharp"></i>
                            <span class="caption-subject font-green-sharp bold uppercase">Danh mục</span>
                            <span class="caption-helper"></span>
                        </div>
                        <div class="actions">
                            <a href="javascript:;" class="btn btn-sm btn-circle btn-success" data-toggle="dropdown">
                                <i class="fa fa-plus"></i>
                                Tạo mới
                            </a>
                            <div class="dropdown-menu theme-panel div-iframeAdmin dropdown-custom">
                            </div>
                            @*Add New Frame *@
                            <div class="dropdown-menu theme-panel div-iframeAdmin1 dropdown-custom hold-on-click">
                                <div class="row hold-on-click dropdown-menu div-iframeAdmin-content">
                                    <div class="col-md-12">
                                        <div class="form-horizontal form-row-seperated" action="#">
                                        @using (Html.BeginForm("CategoryCreate", "Admin", FormMethod.Post))
                                        {
                                            <div class="portlet light">
                                                <div class="portlet-title">
                                                    <div class="caption">
                                                        <i class="icon-puzzle font-green-sharp"></i>
                                                        <span class="caption-subject font-green-sharp bold uppercase">
                                                            Tạo mới danh mục
                                                        </span>
                                                    </div>
                                                    <div class="actions btn-set">
                                                        <button class="btn green-haze btn-circle"><i class="fa fa-check"></i> Tạo mới</button>
                                                    </div>
                                                </div>
                                                <div class="portlet-body">
                                                    <div class="tabbable">
                                                        <div class="tab-content no-space">
                                                            <div class="tab-pane active" id="tab_general">
                                                                <div class="form-body">
                                                                    <div class="form-group">
                                                                        <label class="col-md-4 control-label">
                                                                            Tên danh mục: <span class="required">
                                                                                *
                                                                            </span>
                                                                        </label>
                                                                        <div class="col-md-8">
                                                                            <input type="text" class="form-control" name="tendm" placeholder="">
                                                                        </div>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label class="col-md-4 control-label">
                                                                            Nhóm danh mục: <span class="required">
                                                                                *
                                                                            </span>
                                                                        </label>
                                                                        <div class="col-md-8">
                                                                            <select name="cbbMaNdm" class="table-group-action-input form-control input-inline input-small input-sm">
                                                                                <option value="1">Nam</option>
                                                                                <option value="2">Nữ</option>
                                                                                <option value="3">Phụ kiện</option>

                                                                            </select>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        </div>
                                        
                                    </div>
                                </div>
                                <!-- END PAGE CONTENT-->
                            </div>
                            
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-container">
                            <div class="table-actions-wrapper">
                                <span>
                                </span>
                                <select class="table-group-action-input form-control input-inline input-small input-sm">
                                    <option value="">Select...</option>
                                    <option value="publish">Publish</option>
                                    <option value="unpublished">Un-publish</option>
                                    <option value="delete">Delete</option>
                                </select>
                                <button class="btn btn-sm yellow table-group-action-submit"><i class="fa fa-check"></i> Submit</button>
                            </div>
                            <table class="table table-striped table-bordered table-hover" id="datatable_products">
                                <thead>
                                    <tr role="row" class="heading">
                                        <th width="1%">
                                           STT
                                        </th>
                                        <th width="10%">
                                            Mã danh mục
                                        </th>
                                        <th width="10%">
                                            Tên danh mục
                                        </th>
                                        <th width="10%">
                                            Nhóm danh mục
                                        </th>
                                        <th width="10%">
                                            Trạng thái
                                        </th>
                                        <th width="10%">
                                            Chức năng
                                        </th>
                                    </tr>

                                    <tr role="row" class="filter">
                                        @using (Html.BeginForm("TimKiemDM", "Admin", FormMethod.Post))
                                        {
                                            <td>
                                                <input type="text" class="form-control form-filter input-sm" name="stt" readonly>
                                            </td>

                                            <td>
                                                <input type="text" class="form-control form-filter input-sm" name="madm" placeholder="Mã NSX">
                                            </td>
                                            <td>
                                                <input type="text" class="form-control form-filter input-sm" name="tendm" placeholder="Tên NSX">
                                            </td>

                                            <td>
                                                <select name="nhomdm" class="form-control form-filter input-sm">
                                                    <option value="0">Tất cả</option>
                                                    <option value="1">Nam</option>
                                                    <option value="2">Nữ</option>
                                                    <option value="3">Phụ kiện</option>
                                                </select>

                                            </td>

                                            <td>
                                                <select name="trangthai" class="form-control form-filter input-sm">
                                                    <option value="2">Tất cả</option>
                                                    <option value="0">Hoạt động</option>
                                                    <option value="1">Tạm ngưng</option>

                                                </select>
                                            </td>
                                            <td>
                                                <div class="margin-bottom-5" style="display:inline-block;">
                                                    <button class="btn btn-sm yellow filter-submit margin-bottom" type="submit"><i class="fa fa-search"></i> Tìm kiếm</button>
                                                </div>
                                                <button class="btn btn-sm red filter-cancel" type="reset"><i class="fa fa-times"></i> </button>
                                            </td>
                                        }
                                    </tr>



                                </thead>
                                <tbody>

                                    @foreach(DANHMUC dm in Model)
                                    {
                                    <tr role="row">
                                        <td style="text-align:center">
                                            <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                                @{ int pos = dm.MaDanhMuc.IndexOf("DM"); }
                                                @dm.MaDanhMuc.Substring(pos + 2)
                                                
                                            </label>
                                        </td>
                                        <td class="sorting_1">
                                            @dm.MaDanhMuc
                                        </td>
                                        <td>
                                            @dm.TenDanhMuc
                                        </td>
                                        <td>
                                            @if(@dm.NhomDanhMuc == 1)
                                            {
                                                <label>Nam</label>
                                            }
                                            
                                            @if (@dm.NhomDanhMuc == 2)
                                            {
                                                <label>Nữ</label>
                                            }

                                            @if (@dm.NhomDanhMuc == 3)
                                            {
                                                <label>Phụ kiện</label>
                                            }


                                        </td>
                                        <td>
                                            @if (dm.BiXoa == 0)
                                            {
                                                <span class="label label-sm label-warning">Hoạt động</span>
                                            }
                                            else
                                            {
                                                <span class="label label-sm label-warning">Không hoạt động</span>
                                            }
                                            
                                        </td>
                                        <td>
                                            <a href="javascript:;" class="btn btn-sm btn-circle btn-default" data-toggle="dropdown">
                                                <i class="fa fa-pencil"></i>
                                                Cập nhật
                                            </a>
                                            <div class="dropdown-menu theme-panel div-iframeAdmin dropdown-custom">
                                            </div>
                                            @*Add New Frame *@
                                            <div class="dropdown-menu theme-panel div-iframeAdmin1 dropdown-custom hold-on-click">
                                                <div class="row hold-on-click dropdown-menu div-iframeAdmin-content">
                                                    <div class="col-md-12">
                                                        <div class="form-horizontal form-row-seperated" action="#">
                                                            @using (Html.BeginForm("CategoryUpdate", "Admin", FormMethod.Post))
                                                            {
                                                                    <div class="portlet light">
                                                                        <div class="portlet-title">
                                                                            <div class="caption">
                                                                                <i class="icon-puzzle font-green-sharp"></i>
                                                                                <span class="caption-subject font-green-sharp bold uppercase">
                                                                                    Cập nhật danh mục
                                                                                </span>
                                                                            </div>
                                                                            <div class="actions btn-set">
                                                                                <button type="submit" class="btn green-haze btn-circle"><i class="fa fa-check"></i> Cập nhật</button>
                                                                            </div>
                                                                        </div>
                                                                        <div class="portlet-body">
                                                                            <div class="tabbable">
                                                                                <div class="tab-content no-space">
                                                                                    <div class="tab-pane active" id="tab_general">
                                                                                        <div class="form-body">
                                                                                            <div class="form-group">
                                                                                                <label class="col-md-4 control-label">
                                                                                                    Tên danh mục: <span class="required">
                                                                                                        *
                                                                                                    </span>
                                                                                                </label>
                                                                                                <div class="col-md-8">
                                                                                                    <input type="text" class="form-control txt-tensx" name="tendm" placeholder="" value="@dm.TenDanhMuc">
                                                                                                    <input type="text" class="form-control txt-mansx" name="madm" placeholder="" value="@dm.MaDanhMuc" style="display:none">
                                                                                                </div>
                                                                                            </div>
                                                                                            <div class="form-group">
                                                                                                <label class="col-md-4 control-label">
                                                                                                    Nhóm danh mục: <span class="required">
                                                                                                        *
                                                                                                    </span>
                                                                                                </label>
                                                                                                <div class="col-md-8">
                                                                                                    <select name="cbbMaNdm" class="table-group-action-input form-control input-inline input-small input-sm">
                                                                                                        <option value="1" @(dm.NhomDanhMuc == 1 ? "selected" : "")>Nam</option>
                                                                                                        <option value="2" @(dm.NhomDanhMuc == 2 ? "selected" : "")>Nữ</option>
                                                                                                        <option value="3" @(dm.NhomDanhMuc == 3 ? "selected" : "")>Phụ kiện</option>

                                                                                                    </select>
                                                                                                </div>
                                                                                            </div>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                          }
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- END PAGE CONTENT-->
                                            </div>
                                            <div style="display:inline-block">
                                                @using (Html.BeginForm("CategoryDelete", "Admin", FormMethod.Post))
                                                {
                                                    <input type="text" class="txt-mansx" name="madm" placeholder="" value="@dm.MaDanhMuc" style="display:none">
                                                    <button type="submit" href="javascript:;" class="btn btn-sm btn-circle btn-danger">
                                                        <i class="fa fa-trash-o"></i>
                                                        Xóa
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                    }

                                    <tr>
                                        <td colspan="6">
                                            <div class="col-lg-12" style="text-align:center">
                                                @*Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) trên @Model.PageCount*@
                                                @Html.PagedListPager(Model, page => Url.Action("Category", new { page }))
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- End: life time stats -->
            </div>
        </div>
        <!-- END PAGE CONTENT-->
    </div>
</div>
<!-- END CONTENT -->