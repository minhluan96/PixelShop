@using PixelShop.Models
@model PagedList.IPagedList<PixelShop.Models.SANPHAM>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<div class="sub-banner my-banner3">
</div>
<div class="content">
    <div class="container">
         @using (Html.BeginForm("Index", "Search", new { }, FormMethod.Get))
         {
        <div class="col-md-4 w3ls_dresses_grid_left">
            <div class="w3ls_dresses_grid_left_grid search-agileinfo pull-right">
          
                    <button type="submit" class="btn btn-default search" aria-label="Left Align" style="width:40%;">
                        <p style="color:white;"><i class="fa fa-search" aria-hidden="true"></i>        Tìm kiếm</p>
                    </button>
            </div>
            <div class="w3ls_dresses_grid_left_grid" style="margin-top:70px;">
                <h3>LOẠI</h3>
                <div class="w3ls_dresses_grid_left_grid_sub">
                    <div class="ecommerce_dres-type">
                        <ul>
                            @{ List<DANHMUC> lstDMNu = ViewData["danhmucnu"] as List<DANHMUC>; }
                            @{ List<DANHMUC> lstDMNam = ViewData["danhmucnam"] as List<DANHMUC>; }
                            @{ List<DANHMUC> lstDMPhuKien = ViewData["danhmucphukien"] as List<DANHMUC>; }
                            <li>Đồng hồ nữ</li>
                            @for (int i = 0; i < lstDMNu.Count(); i++)
                            {
                                <li>
                                    <div class="radio">
                                        <input type="radio" id="radio+@lstDMNu.ElementAt(i).MaDanhMuc" value="@lstDMNu.ElementAt(i).MaDanhMuc" name="DanhMuc" />
                                        <label for="radio+@lstDMNu.ElementAt(i).MaDanhMuc"><span></span>@lstDMNu.ElementAt(i).TenDanhMuc</label>
                                    </div>
                                </li>
                            }
                            <li>Đồng hồ nam</li>
                            @for (int i = 0; i < lstDMNam.Count(); i++)
                            {
                                <li>
                                    <div class="radio">
                                        <input type="radio" id="radio+@lstDMNam.ElementAt(i).MaDanhMuc" value="@lstDMNam.ElementAt(i).MaDanhMuc" name="DanhMuc" />
                                        <label for="radio+@lstDMNam.ElementAt(i).MaDanhMuc"><span></span>@lstDMNam.ElementAt(i).TenDanhMuc</label>
                                    </div>
                                </li>
                            }
                            <li>Phụ kiện</li>
                            @for (int i = 0; i < lstDMPhuKien.Count(); i++)
                            {
                                <li>
                                    <div class="radio">
                                        <input type="radio" id="radio+@lstDMPhuKien.ElementAt(i).MaDanhMuc" value="@lstDMPhuKien.ElementAt(i).MaDanhMuc" name="DanhMuc" />
                                        <label for="radio+@lstDMPhuKien.ElementAt(i).MaDanhMuc"><span></span>@lstDMPhuKien.ElementAt(i).TenDanhMuc</label>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="w3ls_dresses_grid_left_grid">
                <h3>HÃNG SẢN XUẤT</h3>
                <div class="w3ls_dresses_grid_left_grid_sub">
                    <div class="ecommerce_color">
                        <ul>
                            @{ List<NHASANXUAT> lstNSX = ViewData["nhasanxuat"] as List<NHASANXUAT>; }
                            @for (int i = 0; i < lstNSX.Count(); i++)
                            {
                                <li>
                                    <div class="radio">
                                        <input type="radio" id="radio+@lstNSX.ElementAt(i).MaNSX" value="@lstNSX.ElementAt(i).MaNSX" name="NhaSanXuat" />
                                        <label for="radio+@lstNSX.ElementAt(i).MaNSX"><span></span>@lstNSX.ElementAt(i).TenNSX</label>
                                    </div>
                                </li>
                            }   
                        </ul>
                    </div>
                </div>
            </div>
            <div class="w3ls_dresses_grid_left_grid">
                <h3>MỨC GIÁ</h3>
                <div class="w3ls_dresses_grid_left_grid_sub">
                    <div class="ecommerce_color ecommerce_size">
                        <ul>
                            <li>
                                <div class="radio">
                                    <input type="radio" id="radioGia01" value="0-3000000" name="Gia" />
                                    <label for="radioGia01"><span></span>Dưới 3 triệu</label>
                                </div>
                            </li>
                            <li>
                                <div class="radio">
                                    <input type="radio" id="radioGia02" value="3000001-5000000" name="Gia" />
                                    <label for="radioGia02"><span></span>Từ 3 đến 5 triệu</label>
                                </div>
                            </li>
                            <li>
                                <div class="radio">
                                    <input type="radio" id="radioGia03" value="5000001-10000000" name="Gia" />
                                    <label for="radioGia03"><span></span>Từ 5 đến 10 triệu</label>
                                </div>
                            </li>
                            <li>
                                <div class="radio">
                                    <input type="radio" id="radioGia04" value="10000001-99999999" name="Gia" />
                                    <label for="radioGia04"><span></span>Trên 10 triệu</label>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="w3ls_dresses_grid_left_grid">
                <div class="dresses_img_hover">
                    <img src="~/images/offer2.jpg" alt=" " class="img-responsive" />
                    <div class="dresses_img_hover_pos">
                        <h4>Giảm giá<span>50%</span><i>trong hôm nay</i></h4>
                    </div>
                </div>
            </div>
        </div>
        }
        <div class="col-md-8 col-sm-8 women-dresses">
                    
                    @if(Model.Count()==0)
                    {
                        <h3>Không tìm thấy sản phẩm phù hợp<br /></h3>
                    }
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                           if (i % 3 == 0) { @Html.Raw("<div class=\"women-set1\">")            }

                       
                            <div class="col-md-4 women-grids wp1 animated wow slideInUp" data-wow-delay=".5s">
                                <div class="product-img">
                                    <a href="@Url.Action("Index", "Info", new { id = Model.ElementAt(i).MaSP })">
                                        <img src="@Html.DisplayFor(sp => Model.ElementAt(i).HinhHienThi)" style="height:auto;" alt="" />
                                    </a>
                                    @if (Session["username"] != null)
                                    {
                                        <div class="p-mask">
                                            <span class="btnaddcart @Model.ElementAt(i).MaSP"><button type="submit" class="w3ls-cart pw3ls-cart"><i class="fa fa-cart-plus" aria-hidden="true"></i> Thêm vào giỏ hàng</button></span>
                                         </div>
                                    }
                            </div>
                                <i class="fa fa-star yellow-star" aria-hidden="true"></i>
                                <i class="fa fa-star yellow-star" aria-hidden="true"></i>
                                <i class="fa fa-star yellow-star" aria-hidden="true"></i>
                                <i class="fa fa-star yellow-star" aria-hidden="true"></i>
                                <i class="fa fa-star gray-star" aria-hidden="true"></i>
                                <h4>@Html.DisplayFor(sp => Model.ElementAt(i).TenSP)</h4>
                                <h5>@Html.DisplayFor(sp => Model.ElementAt(i).giaStr)</h5>
                            </div>
                            if (i % 3 == 2)
                            {
                            @Html.Raw("<div class=\"clearfix\"></div> </div>")
                            }
                            }
                            <div class="col-lg-12 women-set1" style="text-align:center; margin: 50px;">
                                @if (Model.Count() > 0)
                                {
                                    <p>Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) trên @Model.PageCount</p>
                                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                                }
                            </div>
</div>
    </div>
</div>
